extends layout
append head
  link(rel="stylesheet", href="/css/login.css")

//- https://stackoverflow.com/questions/2004315/populate-1-form-field-based-on-another

block content
  .bg-left
    #particles
    .container-left
      h1.title.title-size socketChat
      h3.tagline.secondary-size
        | #[strong Join] the global room, 
        | join a room using a code, 
        | or #[strong create] your own!
      form.login-form(method="post" action="/")
        input.usernameInput(type="text" name="username" placeholder="Username"  autocomplete="off" )
        button(type="submit") Join everyone!
  .container-right
    form.room-form(method="post" action="/room/")
      label Join a private room #[span ðŸ”’]
      input.usernameInput(type="text" name="username" placeholder="Username"  autocomplete="off" )
      input(type="text" name="roomCode" placeholder="Room code")
      button(type="submit") Join room
    form.create-form(method="post" action="/room/")
      label Create a secret room #[span ðŸ™ˆ]
      input.usernameInput(type="text" name="username" placeholder="Username"  autocomplete="off" )
      button(type="submit") Create room
    footer.footer
      a(href="https://khanabdullah.com")
        img(src="/img/logo.jpg" alt="Abdullah's logo")
      a(href="https://github.com/abdullah-k/socketChat" target="_blank")
        p #{'</>'}
  
block scripts
  script(src="/lib/particles.min.js")
  script(src="/js/login.js")
