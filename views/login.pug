extends layout
append head
  link(rel="stylesheet", href="/css/login.css")

block content
  .bg-left
    #particles
    .container-left
      h1.title.title-size socketChat
      h3.tagline.secondary-size
        | #[strong Join] the global room, 
        br
        | join a room using a code, 
        br
        | or #[strong create] your own!
      form.login-form(action="submit")
        input(type="text")
        input(type="button", value="Join everyone!")

block scripts
  script(src="/lib/particles.min.js")
  script(src="/js/login.js")
