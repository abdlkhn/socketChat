extend layout

append head
  link(rel="stylesheet", href="/css/home.css")

block content
  .inner-container
    .header
      h1 socketChat
      a.logout(href="/logout") Log out
    //- h1= userWelcome
    .chat
      .users-container
        - let user = `${username} (me)`
        ul.users-list.card
          small.alone-text You're all alone in here #[span 🙁]
      .chat-container
        .messages.card
          p No messages yet. Say something first!
        .input-container.card
          form.messageForm
            input.message-input(autocomplete="off" type="text" placeholder="Type a message..." name="messageInput")
            button Send
block scripts
  script(src="/lib/socket.io.js")
  script(src="/js/main.js")
